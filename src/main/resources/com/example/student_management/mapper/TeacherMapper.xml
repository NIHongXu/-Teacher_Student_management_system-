<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.student_management.Mapper.TeacherMapper">

    <resultMap id="BaseResultMap" type="com.example.student_management.entity.Teacher">
        <id column="teacher_id" property="teacherId" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="gender" property="gender" jdbcType="CHAR"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="department" property="department" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- 根据ID查询教师 -->
    <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT *
        FROM teacher
        WHERE teacher_id = #{teacherId}
    </select>

    <!-- 查询所有教师 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT *
        FROM teacher
        ORDER BY teacher_id ASC
    </select>

    <!-- 条件查询教师 -->
    <select id="selectByCondition" resultMap="BaseResultMap">
        SELECT *
        FROM teacher
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="department != null and department != ''">
                AND department = #{department}
            </if>
        </where>
        ORDER BY teacher_id
    </select>

    <!-- 更新教师信息 -->
    <update id="update" parameterType="com.example.student_management.entity.Teacher">
        UPDATE teacher
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="title != null">title = #{title},</if>
            <if test="department != null">department = #{department},</if>
        </set>
        WHERE teacher_id = #{teacherId}
    </update>

    <!-- 删除教师信息 -->
    <delete id="delete" parameterType="java.lang.Integer">
        DELETE FROM teacher
        WHERE teacher_id = #{teacherId}
    </delete>

</mapper>